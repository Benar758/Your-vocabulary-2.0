<Window x:Class="Your_vocabulary_2._0.Training"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Your_vocabulary_2._0"
        mc:Ignorable="d"
        Title="Training" Height="450" Width="400"
        KeyDown="Window_KeyDown"
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel>
            <Label x:Name="WordToAsk" Content="Переведите: " Height="40" VerticalAlignment="Top" FontSize="20"/>
            <TextBox x:Name="Answer" Height="35" Width="150" HorizontalAlignment="Left"/>
            <Button x:Name="AnswerButton" Content="Ответить" Margin="2" Cursor="Hand" Click="AnswerButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
